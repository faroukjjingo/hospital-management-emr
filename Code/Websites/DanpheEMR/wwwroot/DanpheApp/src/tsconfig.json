{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2020", "dom"],
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["types/*"],
      "htmlDocx": ["types/modules/htmldocx/htmldocx.d.ts"]
    }
  },
  "angularCompilerOptions": {
    "enableIvy": true,
    "compilationMode": "full"
  },
  "compileOnSave": false,
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
